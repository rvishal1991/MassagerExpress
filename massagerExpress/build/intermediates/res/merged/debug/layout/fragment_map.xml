        <SeekBar
            android:id="@+id/seekBar"
            style="@style/CustomSeekBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:max="100" />

        <LinearLayout
